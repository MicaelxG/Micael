        const caixaPrincipal = document.querySelector(".caixa-principal");
        const caixaPerguntas = document.querySelector(".caixa-perguntas");
        const caixaAlternativas = document.querySelector(".caixa-alternativas");
        const caixaResultado = document.querySelector(".caixa-resultado");
        const textoResultado = document.querySelector(".texto-resultado");

        const perguntas = [
            {
                enunciado: "Você está em uma floresta e encontra um mapa antigo. O que você faz?",
                alternativas: [
                    {
                        texto: "Decido seguir o mapa em busca do tesouro.",
                        afirmacao: "Você sente a adrenalina da aventura."
                    },
                    {
                        texto: "Levo o mapa para um especialista analisar.",
                        afirmacao: "Você prefere ser cauteloso e buscar ajuda."
                    }
                ]
            },
            {
                enunciado: "Durante a jornada, você encontra um rio. Como você atravessa?",
                alternativas: [
                    {
                        texto: "Construo uma jangada com troncos.",
                        afirmacao: "Você é engenhoso e se adapta ao ambiente."
                    },
                    {
                        texto: "Procuro uma passagem mais estreita para atravessar a pé.",
                        afirmacao: "Você é cuidadoso e evita riscos desnecessários."
                    }
                ]
            },
            {
                enunciado: "Você se depara com uma caverna escura. O que faz?",
                alternativas: [
                    {
                        texto: "Entro na caverna para explorar.",
                        afirmacao: "A curiosidade te impulsiona."
                    },
                    {
                        texto: "Decido dar a volta e continuar o caminho.",
                        afirmacao: "Você valoriza a segurança acima de tudo."
                    }
                ]
            },
            {
                enunciado: "Você encontra um animal ferido no caminho. O que você faz?",
                alternativas: [
                    {
                        texto: "Tento ajudar o animal.",
                        afirmacao: "Sua compaixão é admirável."
                    },
                    {
                        texto: "Continuo meu caminho, pois estou com pressa.",
                        afirmacao: "Você sabe que precisa focar na sua missão."
                    }
                ]
            },
            {
                enunciado: "Finalmente, você encontra o tesouro. O que você faz com ele?",
                alternativas: [
                    {
                        texto: "Divido o tesouro com aqueles que me ajudaram.",
                        afirmacao: "Você é generoso e valoriza a amizade."
                    },
                    {
                        texto: "Guardo tudo para mim e volto para casa.",
                        afirmacao: "Você prefere aproveitar a recompensa sozinho."
                    }
                ]
            },
        ];

        let atual = 0;
        let perguntaAtual;
        let historiaFinal = "";

        function mostraPergunta() {
            if (atual >= perguntas.length) {
                mostraResultado();
                return;
            }
            perguntaAtual = perguntas[atual];
            caixaPerguntas.textContent = perguntaAtual.enunciado;
            caixaAlternativas.textContent = "";
            mostraAlternativas();
        }

        function mostraAlternativas() {
            for (const alternativa of perguntaAtual.alternativas) {
                const botaoAlternativas = document.createElement("button");
                botaoAlternativas.textContent = alternativa.texto;
                botaoAlternativas.addEventListener("click", () => respostaSelecionada(alternativa));
                caixaAlternativas.appendChild(botaoAlternativas);
            }
        }

        function respostaSelecionada(opcaoSelecionada) {
            const afirmacoes = opcaoSelecionada.afirmacao;
            historiaFinal += afirmacoes + " ";
            atual++;<!DOCTYPE html>
